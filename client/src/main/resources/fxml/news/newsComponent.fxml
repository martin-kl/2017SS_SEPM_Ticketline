<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.news.NewsController">
   <children>
      <BorderPane>
         <center>
            <VBox spacing="5.0">
                <children>        <Separator />
                    <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                        <VBox fx:id="vbNewsElements" fillWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </VBox>
                    </ScrollPane>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </VBox>
         </center>
         <top>
              <HBox spacing="5.0" stylesheets="@/css/tabHeader.css" BorderPane.alignment="CENTER">
                  <children>
                      <Label fx:id="lblHeaderIcon" styleClass="headerIcon" />
                      <Label fx:id="lblHeaderTitle" styleClass="headerTitle" text="&lt;HeaderTitle&gt;">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
                  </children>
              </HBox>
         </top>
         <bottom>
            <ButtonBar BorderPane.alignment="CENTER">
               <buttons>
                  <CheckBox fx:id="showSeen" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showSeenClicked" text="%show.read" />
                  <Button fx:id="addNews" mnemonicParsing="false" onAction="#addNewsClicked" text="%news.add" />
               </buttons>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </ButtonBar>
         </bottom>
      </BorderPane>
   </children>
</VBox>
