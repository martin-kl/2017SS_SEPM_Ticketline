<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="loginNode" styleClass="glass" xmlns="http://javafx.com/javafx/8.0.92"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="at.ac.tuwien.inso.sepm.ticketline.client.gui.AuthenticationController">
    <children>
        <Pane styleClass="background"/>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0">
            <children>
                <ImageView fitWidth="300.0" preserveRatio="true">
                    <image>
                        <Image url="@/image/ticketlineLogo.png"/>
                    </image>
                </ImageView>
                <GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="250.0"
                          prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 3;" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="80.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"/>
                        <ColumnConstraints/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <TextField fx:id="txtUsername" promptText="%authenticate.username" GridPane.columnIndex="1"
                                   GridPane.columnSpan="2"/>
                        <PasswordField fx:id="txtPassword" promptText="%authenticate.password" GridPane.columnIndex="1"
                                       GridPane.columnSpan="2" GridPane.rowIndex="2"/>
                        <Separator GridPane.columnSpan="2147483647" GridPane.rowIndex="1"/>
                        <Label text="%authenticate.username"/>
                        <Label text="%authenticate.password" GridPane.rowIndex="2"/>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </GridPane>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnAuthenticate" defaultButton="true" mnemonicParsing="false"
                                onAction="#handleAuthenticate" text="%authenticate.authenticate"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="50.0"/>
            </padding>
            <StackPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>
